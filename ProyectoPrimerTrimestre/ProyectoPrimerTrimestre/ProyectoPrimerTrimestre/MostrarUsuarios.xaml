<Window x:Class="ProyectoPrimerTrimestre.MostrarUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoPrimerTrimestre"
        mc:Ignorable="d"
        Title="Usuarios Registrados" Height="410" Width="520" MaxHeight="410" MaxWidth="520" Background="Black" WindowStartupLocation="CenterScreen">

    <StackPanel Background="Black">
        <Label Content="Usuarios Registrados" Margin="115,0,115,0" FontFamily="Lucida Console" FontSize="20" HorizontalAlignment="Center"></Label>
        <DataGrid Margin="40,0,40,0" Height="300" Name="mostrarLista" Background="Black" BorderBrush="#FF0FFA00" FontFamily="Lucida Console" Foreground="Black" ></DataGrid>
        <Button Content="Salir" Margin="180,10,180,0" Height="30" Click="Button_Click" FontFamily="Lucida Console" Foreground="#FF0FFA00" Background="Black" BorderBrush="#FF0FFA00"/>
    </StackPanel>
</Window>
